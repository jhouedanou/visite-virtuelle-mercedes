<krpano bgcolor="0xFFFFFF">
	
	<preview type="grid(cube,64,64,512,0xEEEEEE,0xFFFFFF,0xFFFFFF)" />
	
	<include url="%VIEWER%/plugins/doubleclick_style.xml" />
	
	
	<layer type="container" flowchildren="v" childflowspacing="20" childmargin="16">
	
		<layer type="text"
			text="This is an editable textfield.[br]Pressing ENTER or ESC or clicking outside stops the editing."
			bgcolor="0xFFFFFF" bgalpha="1.0" bgborder="1 0xAAAAAA"
			editable="true"
			editenterkey="stop"
			/>
		
		<layer type="container" flowchildren="h" childflowspacing="8">
			
			<layer type="text"
				text="This is an editable textfield.[br]Pressing ENTER makes a new line.[br]Pressing ESC or clicking outside stops the editing.[br][br][i]When making any changes here,[br]the content will be mirrored to another textfield.[/i]"
				bgcolor="0xFFFFFF" bgalpha="1.0" bgborder="1 0xAAAAAA"
				editable="true"
				editenterkey="newline"
				oneditchange="layer[mirror].text=text; layer[mirror].visible=true;"
				oneditstop="layer[mirror].visible=false;"
				/>
				
			<!-- mirror / show dynamically the changing input -->
			<layer name="mirror" type="text"
				css="color:#777777;" bgcolor="0xDDDDDD" bgborder="1 0xAAAAAA"
				text=""
				enabled="false"
				visible="false"
				/>
				
		</layer>
		
		<layer type="text"
			text="This is an editable textfield.[br]Pressing SHIFT+ENTER makes a new line.[br]Pressing ENTER or ESC or clicking outside stops the editing."
			bgcolor="0xFFFFFF" bgalpha="1.0" bgborder="1 0xAAAAAA"
			editable="true"
			editenterkey="shiftnewline"
			/>
			
		<layer type="text" style="doubleclick"
			bgcolor="0xDDDDDD" bgborder="1 0xAAAAAA"
			text="This is a not-editable textfield,[br]but double-clicking can start editing..."
			editenterkey="shiftnewline"
			ondoubleclick="startediting(true); bgcolor=0xFFFFFF;"
			oneditstop="bgcolor=0xDDDDDD;"
			/>
			
		
		<layer type="container" flowchildren="h" flowspacing="4">
			<layer type="text" text="Number only:" width="86" />
			<layer type="text" width="86" wordwrap="false" maskchildren="true"
				text="123.45"
				bgcolor="0xFFFFFF" bgalpha="1.0" bgborder="1 0xAAAAAA"
				editable="true"
				oneditchange="text=filternumeric(filterhtml(get(text)))"
				/>
		</layer>
	
		<layer type="container" flowchildren="h" flowspacing="4">
			<layer type="text" text="Number (0-1):" width="86" />
			<layer type="text" width="86" wordwrap="false" maskchildren="true"
				text="0.5"
				bgcolor="0xFFFFFF" bgalpha="1.0" bgborder="1 0xAAAAAA"
				editable="true"
				oneditchange="text=filternumeric(filterhtml(get(text)))"
				oneditstop="text=roundval(clamp(text,0,1),-6);"
				/>
		</layer>
		
		<layer type="container" flowchildren="h" flowspacing="4">
			<layer type="text" text="Integer only:" width="86" />
			<layer type="text" width="86" wordwrap="false" maskchildren="true"
				text="123"
				bgcolor="0xFFFFFF" bgalpha="1.0" bgborder="1 0xAAAAAA"
				editable="true"
				oneditchange="text=filternumeric(filterhtml(get(text)),true)"
				oneditstop="text=parseint(text);"
				/>
		</layer>
		
	</layer>
	
	
	<hotspot type="text" distorted="true" ath="15" atv="-10"
			text="This is an editable textfield as [b]hotspot[/b].[br]Pressing ENTER makes a new line.[br]Pressing ESC or clicking outside stops the editing.[br]"
			css="font-size:14px;"
			bgcolor="0xFFFFFF" bgalpha="1.0" bgborder="1 0xAAAAAA"
			editable="true"
			editenterkey="newline"
			/>
	
</krpano>
